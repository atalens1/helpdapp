<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Nivel global de logs (cambiar a DEBUG si quieres ver mÃ¡s info) -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>

        <!-- ðŸ”¹ Ocultar logs DEBUG de Hibernate -->
        <Logger name="org.hibernate" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- ðŸ”¹ Ocultar logs DEBUG de MariaDB JDBC -->
        <Logger name="org.mariadb.jdbc" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.mariadb.jdbc.client.impl.StandardClient" level="error" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.mariadb.jdbc.message.server.OkPacket" level="error" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
